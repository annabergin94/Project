<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_shade_1"
        tools:context=".View.MainActivity">

    <ImageView
            android:layout_width="116dp"
            android:layout_height="77dp"
            tools:src="@tools:sample/avatars"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>


    <TextView
            android:id="@+id/tvWalletBalance"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="17sp"
            android:text="0.000000BTC"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.095"/>

    <FrameLayout android:name="com.example.pracitcingrecievingbtc.View.MainActivity$PlaceholderFragment"
                 android:layout_width="match_parent"
                 android:layout_height="550dp"
                 android:id="@+id/flFragment"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHoriztonal_bias="0.5"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintStart_toBottomOf="@tvWalletBalance"
                 app:layout_constraintHorizontal_bias="0.0"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/btnViewAddress"
            android:text="VIEW ADDRESS"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/yellow"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/flFragment"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/flFragment"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/btnSendBitcoin"
            android:text="SEND BITCOIN"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/yellow"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintTop_toBottomOf="@+id/flFragment"
            app:layout_constraintBottom_toTopOf="@+id/btnViewAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/btnReceiveBitcoin"
            android:text="RECEIVE BITCOIN"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/yellow"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintTop_toBottomOf="@+id/flFragment"
            app:layout_constraintBottom_toTopOf="@+id/btnSendBitcoin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>