<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".View.MainActivity$PlaceholderFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/background_color">

    <Button
            android:text="View current address"
            android:textAllCaps="false"
            android:onClick="viewAddress"
            tools:ignore="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCallingViewAddressFrag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.589"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

    <Button
            android:text="Send Bitcoin"
            android:textAllCaps="false"
            android:onClick="sendBitcoin"
            tools:ignore="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCallingSendBitcoinFrag"
            app:layout_constraintTop_toBottomOf="@+id/btnCallingViewAddressFrag"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:textSize="18sp"/>

    <Button
            android:text="Transaction History"
            android:textAllCaps="false"
            android:onClick="receiveBitcoin"
            tools:ignore="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCallingReceiveBitcoinFrag"
            app:layout_constraintTop_toBottomOf="@+id/btnCallingSendBitcoinFrag"
            android:layout_marginTop="8dp"
            android:textSize="18sp"/>

    <Button
            android:text="View Bitcoin Price History"
            android:textAllCaps="false"
            android:onClick="viewPrices"
            tools:onClick="ignore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCallHistoricalPriceFrag"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCallingReceiveBitcoinFrag"
            app:layout_constraintVertical_bias="0.388" android:textSize="18sp"/>

    <TextView
            android:text="0.00005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAvailableBalance"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.449"
            android:textSize="20sp"/>

    <ImageView
            android:src="@drawable/softcoinlogo"
            android:layout_width="383dp"
            android:layout_height="287dp"
            android:id="@+id/appLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnCallingViewAddressFrag"
            android:layout_marginBottom="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.443"/>

    <androidx.appcompat.widget.SwitchCompat
            android:text="light/dark mode"
            android:layout_width="162dp"
            android:layout_height="37dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btnSwitchTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:textSize="24sp"/>
    <TextView
            android:text="Â£10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvRealBalance"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAvailableBalance" android:layout_marginTop="8dp"
            android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>