<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".View.MainActivity$PlaceholderFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/background_color">


    <Button
            android:text="View address"
            android:onClick="viewAddress"
            tools:ignore="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCallingViewAddressFrag"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.394"
            android:layout_marginTop="24dp"/>
    <Button
            android:text="Send Bitcoin"
            android:onClick="sendBitcoin"
            tools:ignore="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCallingSendBitcoinFrag"
            app:layout_constraintTop_toBottomOf="@+id/btnCallingViewAddressFrag"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Receive Bitcoin"
            android:onClick="receiveBitcoin"
            tools:ignore="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCallingReceiveBitcoinFrag"
            app:layout_constraintTop_toBottomOf="@+id/btnCallingSendBitcoinFrag"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="View Bitcoin Price History"
            android:onClick="viewPrices"
            tools:onClick="ignore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnCallHistoricalPriceFrag"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCallingReceiveBitcoinFrag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAvailableBalance"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.07"/>
    <ImageView
            android:src="@drawable/applogo"
            android:layout_width="141dp"
            android:layout_height="110dp"
            android:id="@+id/appLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnCallingViewAddressFrag"
            android:layout_marginBottom="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.683"/>

    <androidx.appcompat.widget.SwitchCompat
            android:text="light/dark mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btnSwitchTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.025"/>

</androidx.constraintlayout.widget.ConstraintLayout>