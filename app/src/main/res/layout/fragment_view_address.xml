<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_shade_1"
        tools:context=".View.ViewAddressFragment">

    <TextView
            android:id="@+id/textview_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet Address"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="parent"/>
    <TextView
            android:text="Address"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addressHeader"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:layout_marginBottom="20dp"/>

    <EditText
            android:hint=" "
            android:layout_width="match_parent"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:id="@+id/etMyAddress"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:shadowColor="@color/primary_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"/>

    <Button  android:id="@+id/copy"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginBottom="18dp"
             android:layout_centerHorizontal="true"
             android:text="Copy address"
             android:textAllCaps="false"
             android:textColor="@color/white"
             android:padding="10dp"
             android:layout_marginTop="100dp"
             android:layout_marginRight="50dp"/>

    <Button android:id="@+id/backToMainMenu"
            android:onClick="backToMainMenu"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:text="Back to main menu"/>

</RelativeLayout>


