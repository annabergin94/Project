<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_color"
        tools:context=".View.ViewAddressFragment">

    <EditText
            android:hint=" "
            android:layout_width="wrap_content"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:id="@+id/etMyAddress"
            android:textColor="?attr/text_color"
            android:shadowColor="@color/cardview_shadow_end_color"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>

    <Button android:id="@+id/copy"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Copy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etMyAddress"
            android:layout_marginTop="44dp"/>

    <Button android:id="@+id/callingPlaceholderFrag"
            android:onClick="backToMainMenu"
            android:layout_height="45dp"
            android:layout_width="162dp"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:text="@string/main_menu"
            android:layout_below="@+id/copy"
            android:layout_alignParentStart="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="144dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/copy"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="OnClick"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Wallet address"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.151"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.099"/>

</androidx.constraintlayout.widget.ConstraintLayout>


