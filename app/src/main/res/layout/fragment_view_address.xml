<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addressFrag"
        android:background="?attr/background_color"
        tools:context=".View.AddressFrag">


    <TextView
            android:text="Wallet address"
            android:textColor="?attr/text_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="197dp"
            android:layout_height="36dp"
            android:id="@+id/tvExplainAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="144dp"
            android:fontFamily="@font/amiko"/>

    <TextView
            android:layout_width="382dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvMyAddress"
            android:textColor="@color/black"
            android:text="address"
            android:background="@drawable/etbackground"
            android:textSize="16sp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvExplainAddress"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/tvAddressUserInfo"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintVertical_bias="0.275"
            android:fontFamily="@font/amiko"/>


    <ImageButton
            android:id="@+id/btnCopy"
            android:layout_width="140dp"
            android:layout_height="78dp"
            android:src="@drawable/copyicon"
            android:background="?attr/background_color"
            android:contentDescription="copy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAddressUserInfo"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>

    <ImageButton
            android:id="@+id/callingPlaceholderFrag"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:src="@drawable/homeicon"
            android:layout_below="@+id/btnCopy"
            tools:ignore="OnClick"
            android:background="?attr/background_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCopy"
            android:onClick="backToMainMenu"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="144dp"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.366"
            android:layout_marginBottom="20dp"/>

    <TextView
            android:text="@string/share_this_address_with_anyone_and_they_can_send_you_payments"
            android:textColor="?attr/text_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp"
            android:layout_centerHorizontal="false"
            android:layout_width="315dp"
            android:layout_height="61dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvAddressUserInfo"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="272dp"
            android:fontFamily="@font/amiko"/>

    <ImageView
            android:src="@drawable/softcoinicon"
            android:layout_width="73dp"
            android:layout_height="62dp"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="106dp"
            app:layout_constraintBottom_toTopOf="@+id/tvMyAddress"/>

</androidx.constraintlayout.widget.ConstraintLayout>


