<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_color"
        tools:context=".View.ViewAddressFragment">


    <TextView
            android:text="Wallet address"
            android:textColor="?attr/text_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="175dp"
            android:layout_height="44dp"
            android:id="@+id/tvExplainAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="140dp"
    />

    <TextView
            android:layout_width="385dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvMyAddress"
            android:textColor="@color/black"
            android:text="address"
            android:background="@drawable/etbackground"
            android:textSize="18sp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.434"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvExplainAddress"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/tvAddressUserInfo"/>
    <ImageButton
            android:id="@+id/btnCopy"
            android:layout_width="89dp"
            android:layout_height="69dp"
            android:src="@drawable/copyicon"
            android:contentDescription="copy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAddressUserInfo" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|number"
            android:layout_centerHorizontal="true"
            android:hint="@string/enter_address"
            android:ems="7"
            android:id="@+id/etPasteAddress"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCopy" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.35"/>
    <Button
            android:text="@string/paste"
            android:layout_width="92dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnPaste"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="34dp" app:layout_constraintTop_toBottomOf="@+id/etPasteAddress"/>
    <Button android:id="@+id/callingPlaceholderFrag"
            android:onClick="backToMainMenu"
            android:layout_height="51dp"
            android:layout_width="142dp"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:text="@string/main_menu"
            android:textSize="18sp"
            android:layout_below="@+id/btnCopy"
            android:layout_alignParentStart="true"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="OnClick"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="28dp"
            android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/btnPaste"/>
    <TextView
            android:text="@string/share_this_address_with_anyone_and_they_can_send_you_payments"
            android:textColor="?attr/text_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp"
            android:layout_centerHorizontal="false"
            android:layout_width="295dp"
            android:layout_height="59dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvAddressUserInfo"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="256dp"/>
    <ImageView
            android:src="@drawable/softcoinicon"
            android:layout_width="73dp"
            android:layout_height="62dp"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:layout_marginBottom="106dp" app:layout_constraintBottom_toTopOf="@+id/tvMyAddress"/>

</androidx.constraintlayout.widget.ConstraintLayout>


