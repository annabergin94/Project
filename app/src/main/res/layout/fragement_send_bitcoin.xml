<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/black_shade_1"
              android:orientation="vertical">

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="20dp"
              android:id="@+id/tvEnterAmount"
              android:text="Enter amount"
              android:textColor="@color/white"
              android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText android:layout_height="wrap_content"
              android:layout_width="347dp"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:id="@+id/etAmountToSend"
              android:layout_below="@+id/tvEnterAmount"
              android:ems="10"
              android:inputType="number"
              app:layout_constraintBottom_toTopOf="@+id/tvEnterAmount"
              android:hint="Enter amount of BTC"
              android:textColorHint="@color/white"/>

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_alignParentTop="true"
              android:id="@+id/tvAvailableBalance"
              app:layout_constraintBottom_toTopOf="@+id/etAmountToSend"
              android:textColor="@color/white"
              android:text="0.005 BTC available"
              android:layout_marginTop="115dp"
              android:layout_centerHorizontal="true"/>

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_marginTop="164dp"
              android:id="@+id/tvRecipientAddress"
              android:layout_centerHorizontal="true"
              android:text="Enter recipient address"
              app:layout_constraintBottom_toTopOf="@+id/tvAvailableBalance"
              android:textColor="@color/white"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_marginLeft="30dp"/>

    <EditText android:layout_height="wrap_content"
              android:layout_width="347dp"
              android:layout_marginTop="200dp"
              android:id="@+id/etRecipientAddress"
              app:layout_constraintBottom_toTopOf="@+id/tvRecipientAddress"
              android:ems="10"
              android:inputType="number"
              android:layout_marginLeft="30dp"
              android:hint="Enter recipient address"
              android:textColorHint="@color/white"/>

    <Button android:layout_height="44dp"
            android:layout_width="61dp"
            android:layout_marginTop="-99dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/btnScanQR"
            android:text="QR"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/tvRecipientAddress"
            android:layout_marginLeft="320dp"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="false"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/btnSendBitcoin"
            app:layout_constraintBottom_toTopOf="@+id/etRecipientAddress"
            android:text="Send"
            android:textAllCaps="false"
            android:layout_below="@+id/tvRecipientAddress"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/backToMainMenu"
            android:text="Main menu"
            android:layout_marginBottom="18dp"
            android:onClick="backToMainMenu"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>