<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context=".View.MainActivity$PlaceholderFragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="?attr/background_color"
              android:orientation="vertical">

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_centerHorizontal="true"
              android:id="@+id/tvEnterAmount"
              android:text="Enter amount to send"
              android:textColor="?attr/text_color"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textSize="20sp"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/etAmountToSend"
              app:layout_constraintVertical_bias="0.877"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

    <EditText android:layout_height="38dp"
              android:layout_width="311dp"
              android:layout_centerHorizontal="true"
              android:id="@+id/etAmountToSend"
              android:layout_below="@+id/tvEnterAmount"
              android:ems="10"
              android:inputType="numberDecimal"
              android:hint="0.0"
              android:textColor="?attr/text_color"
              android:textColorHint="?attr/text_color"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:background="@drawable/etbackground"
              android:layout_marginBottom="12dp"
              app:layout_constraintBottom_toTopOf="@+id/tvAvailableBalance"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"/>

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_alignParentTop="true"
              android:id="@+id/tvAvailableBalance"
              android:textColor="?attr/text_color"
              android:text="@string/_0_005_btc_available"
              android:layout_centerHorizontal="true"
              android:textSize="16sp"
              android:inputType="numberDecimal"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/tvRecipientAddress"
              android:layout_marginBottom="60dp"/>

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_alignParentTop="true"
              android:id="@+id/tvRecipientAddress"
              android:layout_centerHorizontal="true"
              android:text="@string/enter_recipient_address"
              android:textColor="?attr/text_color"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textSize="20sp"
              android:textStyle="bold"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText android:layout_height="30dp"
              android:layout_width="311dp"
              android:id="@+id/etRecipientAddress"
              android:ems="10"
              android:textColor="?attr/text_color"
              android:textColorHint="?attr/text_color"
              android:hint="@string/enter_recipient_address"
              android:maxLength="42"
              android:inputType="text"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="32dp"
              android:background="@drawable/etbackground"
              app:layout_constraintTop_toBottomOf="@+id/tvRecipientAddress"
              app:layout_constraintBottom_toTopOf="@+id/btnSendBitcoin"
              app:layout_constraintVertical_bias="0.0"
              android:textAlignment="center"
              android:layout_marginBottom="45dp"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnSendBitcoin"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_below="@+id/tvRecipientAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintBottom_toTopOf="@+id/backToMainMenu"
            android:layout_marginBottom="64dp"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/backToMainMenu"
            android:text="@string/main_menu"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:onClick="backToMainMenu"
            android:layout_alignParentBottom="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"/>

    <ImageView
            android:src="@drawable/softcoinicon"
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/etAmountToSend"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>