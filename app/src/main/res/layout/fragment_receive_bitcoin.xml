<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/background_color"
        tools:context=".View.SendBitcoinFragment">

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_alignParentTop="true"
              android:id="@+id/tvBalance"
              android:layout_centerHorizontal="true"
              android:text="@string/transaction_history"
              android:textColor="?attr/text_color"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textSize="20sp"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/backToMainMenu"
              android:layout_marginBottom="524dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.372" android:layout_marginEnd="132dp"
              app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginStart="101dp"
              app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="@string/transactions"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="?attr/text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvRecentTransactions"
            android:background="@drawable/txbackground"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/backToMainMenu"
            android:layout_marginBottom="504dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/tvBalance" app:layout_constraintVertical_bias="0.0"/>
    <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/backToMainMenu"
            android:text="@string/main_menu"
            android:textAllCaps="false"
            android:onClick="backToMainMenu"
            android:textSize="18sp"
            tools:ignore="onClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <ImageView
            android:src="@drawable/softcoinicon"
            android:layout_width="76dp"
            android:layout_height="69dp"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.001"/>

</androidx.constraintlayout.widget.ConstraintLayout>