<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/background_color"
        tools:context=".View.SendBitcoinFragment">

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/tvSenderAddress"
              android:text="Amount received"
              android:textColor="?attr/text_color"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textSize="20sp"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="56dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.231"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNumOfCoins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            app:layout_constraintBottom_toTopOf="@+id/tvSenderAddress"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Senders address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="412dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.193"/>

    <TextView
            android:text="   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSenderAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="?attr/text_color"
            app:layout_constraintBottom_toTopOf="@+id/backToMainMenu"
            android:layout_marginBottom="140dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/backToMainMenu"
            android:text="Main menu"
            android:textAllCaps="false"
            android:onClick="backToMainMenu"
            tools:ignore="onClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="168dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>